<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.moyada.myblog.admin.dao.BoardDao">
	<!--Upload Board -->
	<insert id="uploadBoard"
		parameterType="com.moyada.myblog.admin.domain.Board">
		insert into board(title, content, board_type) values
		(#{title},#{content},#{board_type})
	</insert>

	<!-- Select All Board List -->
	<select id="getAllBoardList"
		resultType="com.moyada.myblog.admin.domain.Board">
		select * from board where board_type = #{board_type}
	</select>
</mapper>